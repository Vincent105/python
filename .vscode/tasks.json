{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "python",
            "type": "shell",          
            "args": [
                "${file}"
            ],       
            "options": {
                "env": {
                    "PYTHONIOENCODING": "UTF-8"
                },              
            "group": {
                "kind": "build",
                "isDefault": true
            },            
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },    
        },                    
            "problemMatcher": "$msCompile"
        }
    ]
}